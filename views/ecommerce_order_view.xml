        <field name="name">ecommerce.order.form</field>
        <field name="model">ecommerce.order</field>
        <field name="arch" type="xml">
            <form string="Ecommerce Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer"/>
                        <field name="total_amount"/>
                        <field name="payment_method_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

