```xml
<odoo>
    <data>
        <template id="report_payment_method">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Payment Method Report</h2>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Payment Method ID</th>
                                        <th>Payment Method Name</th>
                                        <th>Payment Method Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.payment_method_ids" t-as="payment_method">
                                        <td><t t-esc="payment_method.id"/></td>
                                        <td><t t-esc="payment_method.name"/></td>
                                        <td><t t-esc="payment_method.type"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
